<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <h1>List of Authors</h1>
    <a class='btn btn-primary' href='/authors/create'>Add Author</a>
    <table class='table table-condensed'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Book's Count</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% for(let author of authors){  %>
            <tr>
                <td><%= author.name %></td>
                <td><%= author.books.length%></td>
                <td>
                    <a class='btn btn-sm btn-primary' href='/author/details/<%=author.id%>'>Details</a>
                    <a class='btn btn-sm btn-primary' href='/author/edit/<%=author.id%>'>Edit</a>
                    <a class='btn btn-sm btn-danger' href='/author/delete/<%=author.id%>'>Delete</a>
                </td>
            </tr>
            <%}%>

        </tbody>

    </table>


</body>
</html>